{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "chrome": "58",
                    "safari": "10",
                    "ie": "11"
                },
                "modules": false // 交给rollup处理
            }
        ]
    ],
    "plugins": [
        [
            "@babel/plugin-transform-runtime",
            {
                "corejs": 3,
                "useESModules": true // 交给rollup 处理
            }
        ]
    ]
}
